<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="filtered_partner_ledger">
        <t t-call="web.html_container">
            <t t-call="custom_partner_ledger.ledger_layout">
                <div class="page" style="direction:rtl !important;font-size:12px;">
                    <div>
                        <div class="row">
                            <div class="col-12 text-center">
                                <strong style="font-size:20px; margin:20px">كشف حساب</strong>
                            </div>
                        </div>
                        <div class="row" style="padding:8px">
                            <div class="col-2 ">
                                السادة:
                            </div>
                            <div class="col-4 ">
                                <span t-esc="data['partner_name']"/>
                            </div>
                        </div>

                        <div class="row" style="padding:8px">
                            <div class="col-2 ">
                                من تاريخ:
                            </div>
                            <div class="col-3 ">
                                <span t-esc="data['date']['date_from']"/>
                            </div>

                            <div class="col-2 ">
                                إلى تاريخ:
                            </div>
                            <div class="col-3 ">
                                <span t-esc="data['date']['date_to']"/>
                            </div>
                        </div>
                    </div>
                    <table style="border:1px solid black;height: 45px; margin-top: 15px;" class="table table-sm o_main_table">
                        <thead style="border:1px solid black">
                            <tr>
                                <th style="border:1px solid black">
                                    <span>التاريخ</span>
                                </th>
                                <th style="border:1px solid black">
                                    <span>رقم السند</span>
                                </th>
                                <th style="border:1px solid black">
                                    <span>مدين</span>
                                </th>
                                <th style="border:1px solid black">
                                    <span>دائن</span>
                                </th>
                                <th style="border:1px solid black">
                                    <span>الرصيد</span>
                                </th>
                                <th style="border:1px solid black">
                                    <span>ملاحظة</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody" style="border:1px solid black">
                            <t t-set="debit" t-value="0"/>
                            <t t-set="credit" t-value="0"/>
                            <tr t-foreach="data['lines']" t-as="line_row" style="height: 40px;">
                                <td>
                                    <span t-esc="line_row['date']"/>
                                </td>
                                <td>
                                    <span t-esc="line_row['doc_number']"/>
                                </td>
                                <td>
                                    <span t-esc="line_row['debit']"/>
                                </td>
                                <td>
                                    <span t-esc="line_row['credit']"/>
                                </td>
                                <td>
                                    <span t-esc="line_row['balance']"/>
                                </td>
                                <td>
                                    <span t-esc="line_row['description']"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row" style="margin-top: 30px">
                        <div class="col-6">
                            <div class="row" style="padding:20px">
                                <div class="col-2 " style="background-color:grey">
                                    مدين :
                                </div>
                                <div class="col-4 " style="background-color:grey">
                                    <span t-esc="data['total_line']['debit']"/>
                                </div>
                            </div>
                            <div class="row" style="padding:20px">
                                <div class="col-2 " style="background-color:grey">
                                    دائن :
                                </div>
                                <div class="col-4 " style="background-color:grey">
                                    <span t-esc="data['total_line']['credit']"/>
                                </div>
                            </div>
                            <div class="row" style="padding:20px">
                                <div class="col-2 " style="background-color:grey">
                                    الرصيد :
                                </div>
                                <div class="col-4 " style="background-color:grey">
                                    <span t-esc="data['total_line']['balance']"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row" style="padding:20px">
                                <div class="col-2 ">
                                    تمت المطابقة بواسطة :
                                </div>
                                <div class="col-4 ">
                                    <span>. . . . . . . . . . . . . . . . . . . . .</span>
                                </div>
                            </div>
                            <div class="row" style="padding:20px">
                                <div class="col-2 ">
                                    التوقيع :
                                </div>
                                <div class="col-4 ">
                                    <span>. . . . . . . . . . . . . . . . . . . . .</span>
                                </div>
                            </div>
                            <div class="row" style="padding:20px">
                                <div class="col-2 ">
                                    الختم :
                                </div>
                                <div class="col-4 ">
                                    <span>. . . . . . . . . . . . . . . . . . . . .</span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </t>
        </t>
    </template>

</odoo>
